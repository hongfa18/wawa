<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">#232736</item>
    </style>

    <style name="PullToRefresh.Widget.ProgressBar.Small" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/pull_to_refresh_progress_loading</item>
        <item name="android:minWidth">13dp</item>
        <item name="android:maxWidth">13dp</item>
        <item name="android:minHeight">13dp</item>
        <item name="android:maxHeight">13dp</item>
    </style>
    
    <style name="CustomTitleBar" parent="android:Theme.Light">
        <item name="android:windowTitleSize">48dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
 	<!-- 设置titlebar的背景 -->
    </style>
 	<!-- 设置左进左出 -->
    <style name="themeanimation" parent="CustomTitleBar">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>
    <style name="AnimationActivity">
	    <item name="android:activityOpenEnterAnimation">@anim/slide_in_right_my</item>
	    <item name="android:activityOpenExitAnimation">@null</item>
	    <item name="android:activityCloseEnterAnimation">@null</item>
	    <item name="android:activityCloseExitAnimation">@null</item>
	    <item name="android:taskToBackExitAnimation">@null</item>
	</style>
    
    <style name="om_net_dialog_style" parent="@android:style/Theme.Dialog"  ><!-- @android:style/AlertDialog" -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 更换背景图片实现全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 更改对话框标题栏 -->
        <item name="android:windowTitleStyle">@null</item>
         <!-- 屏幕背景变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="scan_devices_dialog_style" parent="@android:style/Theme.Dialog"  ><!-- @android:style/AlertDialog" -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFrame">@null</item>
        <!-- 更换背景图片实现全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 更改对话框标题栏 -->
        <item name="android:windowTitleStyle">@null</item>
         <!-- 屏幕背景变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 输入框style -->
    <style name="edittext_input_style">
         <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">3</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_marginTop">5dp</item>
	     <item name="android:padding">8dp</item>
	     <item name="android:gravity">center_vertical</item>
	     <item name="android:textColor">@color/black</item>
	     <item name="android:textColorHint">@color/hint_tip_color</item>
	     <item name="android:textSize">18sp</item>
	     <item name="android:background">@drawable/selector_edit_input</item>
	     <item name="android:singleLine">true</item>
	     <item name="android:maxLength">20</item>
	     <!-- <item name="android:focusable">true</item>
	     <item name="android:focusableInTouchMode">true</item>
	     <item name="android:textCursorDrawable">@color/blue</item> -->
    </style>
    <!-- 账号管理style -->
    <style name="account_text_style">
         <item name="android:layout_width">fill_parent</item>
         <item name="android:layout_height">50dp</item>
	     <item name="android:padding">10dp</item>
	     <item name="android:gravity">center_vertical</item>
	     <item name="android:textColor">#232736</item>
	     <item name="android:textSize">18sp</item>
	     <item name="android:background">@drawable/selector_account_menu_item</item>
	     <item name="android:drawableRight">@drawable/selector_btn_account_text</item>
	     <item name="android:singleLine">true</item>
    </style>
    <style name="account_text_style_new">
         <item name="android:layout_width">fill_parent</item>
         <item name="android:layout_height">50dp</item>
	     <item name="android:padding">10dp</item>
	     <item name="android:gravity">center_vertical</item>
	     <item name="android:textColor">#232736</item>
	     <item name="android:textSize">18sp</item>
	     <item name="android:background">@drawable/selector_account_menu_item</item>
	     <item name="android:singleLine">true</item>
    </style>
    
    <style name="klt_confirm_dialog_style" parent="@android:style/Theme.Dialog"  >
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 更换背景图片实现全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 更改对话框标题栏 -->
        <item name="android:windowTitleStyle">@null</item>
         <!-- 屏幕背景变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="StyledIndicators" parent="@style/CustomTitleBar">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textSize">16sp</item>
        <!-- <item name="android:dividerPadding">8dp</item>
        <item name="android:showDividers">middle</item> -->
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 滑动标题栏标题颜色 -->
    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@drawable/selector_tabtext</item>
    </style>
    
    <style name="query_statment_list_item_title_style">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="query_statment_list_item_content_style">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">17sp</item>
    </style>
    
</resources>