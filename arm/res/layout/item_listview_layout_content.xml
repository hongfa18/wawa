<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dp" 
    android:background="@drawable/selector_bg_query_item"
    android:orientation="vertical">
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="59dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView 
	        android:id="@+id/item_query_list_icon"
	        android:layout_width="0px"
	        android:layout_weight="1"
			android:layout_height="wrap_content"
	        android:src="@drawable/inputfield_icon_randomcode"
	        android:layout_margin="5dp"
	        android:scaleType="fitCenter"/>
	   <TextView android:layout_width="0px" android:layout_weight="0.06" android:layout_height="45dp" android:background="#cccccc"/>
	   <LinearLayout 
	       android:layout_width="0px"
	       android:layout_weight="6"
	       android:layout_height="fill_parent"
	       android:orientation="vertical"
	       android:padding="5dp">
	       <TextView 
		        android:id="@+id/item_query_open_type"
		        android:layout_width="wrap_content"
		        android:layout_height="0px"
		        android:layout_weight="1"
		        android:textColor="#232736"
		        android:textSize="16sp"
		        android:text="Buy AirTime - 18689745555"
		        android:layout_gravity="top"
		        android:gravity="center_vertical"
		        android:singleLine="true"/>
	       <TextView 
		        android:id="@+id/item_query_oper_time"
		        android:layout_width="wrap_content"
		        android:layout_height="0px"
		        android:layout_weight="1"
		        android:textSize="13sp"
		        android:textColor="@color/gray"
		        android:text="05-06 18:18"
		        android:singleLine="true"
		        android:layout_gravity="bottom"
		        android:gravity="center_vertical"/>
	   </LinearLayout>
	   <LinearLayout 
	       android:id="@+id/id_item_listview_layout_content_control_area"
	       android:layout_width="0px"
	       android:layout_weight="2.5"
	       android:layout_height="fill_parent"
	       android:orientation="vertical"
	       android:gravity="right|center_vertical"
	       android:paddingRight="5dp">
	       <TextView 
		        android:id="@+id/item_query_money_number"
		        android:layout_width="fill_parent"
		        android:layout_height="0px"
		        android:layout_weight="1"
		        android:textSize="16sp"
		        android:textColor="#232736"
		        android:text="+23,330.00"
		        android:layout_gravity="top"
		        android:gravity="right|center_vertical"
		        android:singleLine="true"/>
		   <TextView 
		        android:id="@+id/item_query_oper_result"
		        android:layout_width="fill_parent"
		        android:layout_height="0px"
		        android:layout_weight="1"
		        android:textSize="13sp"
		        android:textColor="@color/gray"
		        android:text="@string/select_date_tip003"
		        android:singleLine="true"
		        android:layout_gravity="bottom"
		        android:gravity="right|center_vertical"/>
	   </LinearLayout>
    </LinearLayout>
   <TextView android:layout_width="fill_parent" android:layout_height="1dp" android:background="#cccccc"/>
</LinearLayout>
